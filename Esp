-- Referência à parte onde o jogador encosta para ganhar o boost
local boostPart = script.Parent

-- Configurações do boost
local speedBoost = 100 -- Velocidade aumentada
local jumpBoost = 100 -- Força de pulo aumentada
local boostDuration = 5 -- Duração do boost em segundos

-- Função que aplica o boost ao jogador
local function onTouch(hit)
    local character = hit.Parent
    local humanoid = character:FindFirstChildOfClass("Humanoid")

    if humanoid then
        -- Salva os valores originais
        local originalSpeed = humanoid.WalkSpeed
        local originalJump = humanoid.JumpPower

        -- Aplica o boost
        humanoid.WalkSpeed = speedBoost
        humanoid.JumpPower = jumpBoost

        -- Espera a duração e volta ao normal
        task.delay(boostDuration, function()
            humanoid.WalkSpeed = originalSpeed
            humanoid.JumpPower = originalJump
        end)
    end
end

-- Conecta a função ao evento de toque
boostPart.Touched:Connect(onTouch)
