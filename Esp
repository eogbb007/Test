--[[
    Script exclusivo para executores externos no Roblox (ex: Delta)
    Funções:
    - Interface de senha (expulsa se errar, animação se acertar)
    - Segunda interface com comandos ;kill ;explode e campo para escolher um nome especial
    Somente funciona em mapas com comandos de admin e usando executor externo!
]]

local senhaCorreta = "bbi" -- Troque para sua senha preferida
local imagemSenha = "rbxassetid://1246352333" -- Troque para sua imagem
local imagemObrigado = "rbxassetid://1246352333" -- Troque para sua imagem

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

if not LocalPlayer then
    return print("Esse script só funciona em executores externos com LocalPlayer.")
end

-- Interface Senha
local guiSenha = Instance.new("ScreenGui")
guiSenha.Name = "SenhaGui"
guiSenha.Parent = game.CoreGui

local frameSenha = Instance.new("Frame", guiSenha)
frameSenha.Size = UDim2.new(0, 350, 0, 250)
frameSenha.Position = UDim2.new(0.5, -175, 0.5, -125)
frameSenha.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frameSenha.BorderSizePixel = 0

local imgSenha = Instance.new("ImageLabel", frameSenha)
imgSenha.Size = UDim2.new(0, 80, 0, 80)
imgSenha.Position = UDim2.new(0.5, -40, 0, 10)
imgSenha.BackgroundTransparency = 1
imgSenha.Image = imagemSenha

local titleSenha = Instance.new("TextLabel", frameSenha)
titleSenha.Size = UDim2.new(1, 0, 0, 40)
titleSenha.Position = UDim2.new(0, 0, 0, 100)
titleSenha.Text = "Digite a senha do admin"
titleSenha.TextSize = 22
titleSenha.BackgroundTransparency = 1
titleSenha.TextColor3 = Color3.new(1, 1, 1)
titleSenha.Font = Enum.Font.GothamBold

local textboxSenha = Instance.new("TextBox", frameSenha)
textboxSenha.Size = UDim2.new(0.8, 0, 0, 40)
textboxSenha.Position = UDim2.new(0.1, 0, 0, 150)
textboxSenha.PlaceholderText = "Digite a senha aqui"
textboxSenha.TextSize = 18
textboxSenha.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
textboxSenha.TextColor3 = Color3.new(1, 1, 1)
textboxSenha.Font = Enum.Font.Gotham

local confirmSenha = Instance.new("TextButton", frameSenha)
confirmSenha.Size = UDim2.new(0.8, 0, 0, 36)
confirmSenha.Position = UDim2.new(0.1, 0, 0, 200)
confirmSenha.Text = "Confirmar"
confirmSenha.TextSize = 18
confirmSenha.BackgroundColor3 = Color3.fromRGB(30, 160, 30)
confirmSenha.TextColor3 = Color3.new(1, 1, 1)
confirmSenha.Font = Enum.Font.Gotham

local errorSenha = Instance.new("TextLabel", frameSenha)
errorSenha.Size = UDim2.new(1, 0, 0, 22)
errorSenha.Position = UDim2.new(0, 0, 0, 230)
errorSenha.BackgroundTransparency = 1
errorSenha.TextColor3 = Color3.fromRGB(255, 60, 60)
errorSenha.TextSize = 15
errorSenha.Text = ""
errorSenha.Font = Enum.Font.Gotham

-- Função animação obrigado
local function animacaoObrigado()
    frameSenha.Visible = false

    local guiObrigado = Instance.new("ScreenGui")
    guiObrigado.Name = "ObrigadoGui"
    guiObrigado.Parent = game.CoreGui

    local frame = Instance.new("Frame", guiObrigado)
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.Position = UDim2.new(0, 0, 0, 0)
    frame.BackgroundColor3 = Color3.new(0, 0, 0)
    frame.BackgroundTransparency = 1

    for i = 1, 10 do
        frame.BackgroundTransparency = 1 - (i * 0.1)
        wait(0.05)
    end

    local img = Instance.new("ImageLabel", frame)
    img.Size = UDim2.new(0, 120, 0, 120)
    img.Position = UDim2.new(0.5, -60, 0.4, 0)
    img.BackgroundTransparency = 1
    img.Image = imagemObrigado

    local texto = Instance.new("TextLabel", frame)
    texto.Size = UDim2.new(1, 0, 0, 60)
    texto.Position = UDim2.new(0, 0, 0.7, 0)
    texto.Text = "Acesso liberado!"
    texto.TextSize = 32
    texto.TextColor3 = Color3.new(1, 1, 1)
    texto.BackgroundTransparency = 1
    texto.Font = Enum.Font.GothamBold

    wait(1.5)
    guiObrigado:Destroy()
end

-- Interface de comandos
local function abrirComandos()
    local guiCmd = Instance.new("ScreenGui")
    guiCmd.Name = "ComandosGui"
    guiCmd.Parent = game.CoreGui

    local frameCmd = Instance.new("Frame", guiCmd)
    frameCmd.Size = UDim2.new(0, 400, 0, 260)
    frameCmd.Position = UDim2.new(0.5, -200, 0.5, -130)
    frameCmd.BackgroundColor3 = Color3.fromRGB(38, 38, 38)
    frameCmd.BorderSizePixel = 0

    local tituloCmd = Instance.new("TextLabel", frameCmd)
    tituloCmd.Size = UDim2.new(1, 0, 0, 40)
    tituloCmd.Position = UDim2.new(0, 0, 0, 10)
    tituloCmd.Text = "Comandos Exclusivos"
    tituloCmd.TextSize = 22
    tituloCmd.BackgroundTransparency = 1
    tituloCmd.TextColor3 = Color3.new(1, 1, 1)
    tituloCmd.Font = Enum.Font.GothamBold

    -- Nome especial
    local labelNome = Instance.new("TextLabel", frameCmd)
    labelNome.Size = UDim2.new(1, 0, 0, 24)
    labelNome.Position = UDim2.new(0, 0, 0, 55)
    labelNome.Text = "Digite o nome de uma pessoa especial:"
    labelNome.BackgroundTransparency = 1
    labelNome.TextColor3 = Color3.new(1, 1, 1)
    labelNome.TextSize = 16
    labelNome.Font = Enum.Font.Gotham

    local caixaNome = Instance.new("TextBox", frameCmd)
    caixaNome.Size = UDim2.new(0.7, 0, 0, 32)
    caixaNome.Position = UDim2.new(0.15, 0, 0, 80)
    caixaNome.PlaceholderText = "Nome do player"
    caixaNome.TextSize = 18
    caixaNome.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
    caixaNome.TextColor3 = Color3.new(1, 1, 1)
    caixaNome.Font = Enum.Font.Gotham

    -- Botão ;kill
    local btnKill = Instance.new("TextButton", frameCmd)
    btnKill.Size = UDim2.new(0.8, 0, 0, 38)
    btnKill.Position = UDim2.new(0.1, 0, 0, 130)
    btnKill.Text = ";kill"
    btnKill.TextSize = 18
    btnKill.BackgroundColor3 = Color3.fromRGB(160, 30, 30)
    btnKill.TextColor3 = Color3.new(1, 1, 1)
    btnKill.Font = Enum.Font.GothamBold

    -- Botão ;explode
    local btnExplode = Instance.new("TextButton", frameCmd)
    btnExplode.Size = UDim2.new(0.8, 0, 0, 38)
    btnExplode.Position = UDim2.new(0.1, 0, 0, 180)
    btnExplode.Text = ";explode"
    btnExplode.TextSize = 18
    btnExplode.BackgroundColor3 = Color3.fromRGB(80, 30, 160)
    btnExplode.TextColor3 = Color3.new(1, 1, 1)
    btnExplode.Font = Enum.Font.GothamBold

    -- Mensagem
    local msg = Instance.new("TextLabel", frameCmd)
    msg.Size = UDim2.new(1, 0, 0, 30)
    msg.Position = UDim2.new(0, 0, 0, 225)
    msg.BackgroundTransparency = 1
    msg.TextColor3 = Color3.new(1, 1, 1)
    msg.TextSize = 16
    msg.Text = ""
    msg.Font = Enum.Font.Gotham

    -- Funções dos botões
    btnKill.MouseButton1Click:Connect(function()
        local alvo = caixaNome.Text
        if alvo == "" then
            msg.Text = "Preencha o nome!"
            return
        end
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(";kill " .. alvo, "All")
        msg.Text = "Comando ;kill enviado para " .. alvo
    end)

    btnExplode.MouseButton1Click:Connect(function()
        local alvo = caixaNome.Text
        if alvo == "" then
            msg.Text = "Preencha o nome!"
            return
        end
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(";explode " .. alvo, "All")
        msg.Text = "Comando ;explode enviado para " .. alvo
    end)
end

-- Checagem senha
confirmSenha.MouseButton1Click:Connect(function()
    if textboxSenha.Text == senhaCorreta then
        animacaoObrigado()
        wait(0.5)
        guiSenha:Destroy()
        abrirComandos()
    else
        errorSenha.Text = "Senha incorreta! Você será expulso..."
        wait(1)
        LocalPlayer:Kick("Senha incorreta!")
    end
end)
