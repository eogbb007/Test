-- Coloque este script em LocalScript (StarterPlayerScripts)
-- Este exemplo coleta objetos chamados "Coletavel" dentro do workspace

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

local velocidade = 100 -- velocidade do voo
local intervaloBusca = 1 -- segundos entre cada busca

-- Fun√ß√£o para voar at√© o item
local function voarAte(item)
    local distancia = (humanoidRootPart.Position - item.Position).Magnitude
    local tempo = distancia / velocidade

    local tweenService = game:GetService("TweenService")
    local info = TweenInfo.new(tempo, Enum.EasingStyle.Linear)
    local objetivo = {Position = item.Position + Vector3.new(0, 5, 0)} -- voa um pouco acima

    local voo = tweenService:Create(humanoidRootPart, info, objetivo)
    voo:Play()
    voo.Completed:Wait()

    -- Tenta coletar
    if item:FindFirstChild("TouchInterest") then
        humanoidRootPart.CFrame = CFrame.new(item.Position)
    end
end

-- Loop principal
while true do
    local coletaveis = workspace:GetChildren()
    local alvo = nil

    for _, obj in pairs(coletaveis) do
        if obj:IsA("BasePart") and obj.Name == "Coletavel" then
            alvo = obj
            break
        end
    end

    if alvo then
        voarAte(alvo)
    else
        print("üîç Nenhum item encontrado. Aguardando...")
    end

    wait(intervaloBusca)
end
